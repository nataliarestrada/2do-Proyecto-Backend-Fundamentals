
{{#each renta}}
    <div class="flex m-3 bg-gray-200 gap-5">
        <div class="m-3 bg-gray-200 gap-5">
            <h3 class="font-bold text-lg">Libro</h3>
            <figure class="w-20">
                <img  src="{{this.portada}}">
            </figure>
                <h3 class="font-bold text-lg">{{this.titulo}}</h3>
                <p>{{this.precio}}</p>
        </div>
        <div >
            <h3 class="font-bold text-lg">Info Renta</h3>
            <p>id: {{this.id}}</p> 
            <p>id_usuario: {{this.id_usuario}}</p> 
            <p>id_libro: {{this.id_libro}}</p>
            <p>fecha_inicio: {{formatDate this.fecha_inicio}}</p>
            <p>fecha_fin: {{formatDate this.fecha_fin}}</p>
                    
            <p>fecha hoy:{{formatDate ../fecha_hoy}}</p>
            <p class="text-blue-500">{{controlDate (formatDate this.fecha_fin) (formatDate ../fecha_hoy)}}</p>
            <p>estado: {{this.estado}}</p>
        </div>

        <div class="flex flex-col justify-end items-start ml-10">
            {{#if (controlDate (formatDate this.fecha_fin) (formatDate ../fecha_hoy))}}
                    <p class="text-red-500 mb-4 ">âš  Renta vencida! {{formatHour this.fecha_fin}}. Debes pagar un 10% de recargo</p>
            {{else}}
                    <p class="text-green-400 mb-4">ðŸ•‘ {{entrega ../fecha_hoy this.fecha_fin}} para devolver el libro</p>
            {{/if}}
                    
        </div>

        <div class="flex flex-col justify-end items-start ml-10">
            <form action="/return_libro" method="post">
                <input class="rounded-md m-1" type="number" name="id" placeholder="Id" value="{{this.id}}" required readonly style="display:none">
                {{!-- <input class="rounded-md m-1" type="number" name="calificacion" placeholder="estrellas" value="{{this.calificacion}}"> --}}

                <label for="start"><i class="uil uil-start icon"></i> Calification</label>
                <div class="star-widget">
                    <input type="radio" name="rate-5" id="rate-5">
                    <label for="rate-5" class="fas fa-star"></label>
                    <input type="radio" name="rate-4" id="rate-4">
                    <label for="rate-4" class="fas fa-star"></label>
                    <input type="radio" name="rate-3" id="rate-3">
                    <label for="rate-3" class="fas fa-star"></label>
                    <input type="radio" name="rate-2" id="rate-2">
                    <label for="rate-2" class="fas fa-star"></label>
                    <input type="radio" name="rate-1" id="rate-1">
                    <label for="rate-1" class="fas fa-star"></label>
                </div>

                <button class="rounded-md m-1 p-2 text-white bg-orange-300">Pagar</button>
            </form>
        </div>
